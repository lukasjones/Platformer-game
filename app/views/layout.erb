<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <script src="/js/jquery.js"></script>

  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <script src="/js/bootstrap.js"></script>

  <link rel="stylesheet" href="/css/application.css">
  <script src="/js/application.js" type="text/javascript"></script>
  <script type="text/javascript" src="/js/platformer_gameplay.js"></script>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=799141373474820&version=v2.0";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <title>platformer</title>
</head>
<body>
  <%= erb :_header, layout: false %>
  <%= yield %>

  <div class="fb-share-button logged-in" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button"></div>
  <div class="timer logged-in">0</div>
  <div class="center logged-in">
    <button id="start">Play</button>
  </div>
  <div class="jumbo logged-out">
    <h1 class="mega">Welcome to Platform</h1>
  </div>

  <%# end %>

  <script type="text/javascript">
    <% if session[:id] %>
      $(".logged-out").hide();
      $(".logged-in").show();
    <% else %>
      $(".logged-in").hide();
      $(".logged-out").show();
    <% end %>
  </script>

</body>
</html>
